@using EcommerceEcovilleA.Models
@model Produto

@*<input type="text" disabled ="" />*@
@using (Html.BeginForm("AlterarProduto",
                                    "Produto", FormMethod.Post,
                                    new { @class = "form-horizontal" }))
{
<fieldset>
    <legend>Alterar Produto</legend>
    @Html.HiddenFor(model => model.ProdutoId)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do produto" })
            @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição do produto" })
            @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Categoria">Categoria do produto</label>
        <div class="col-sm-10">
            <select class="form-control" id="Categoria" name="Categoria.CategoriaId">
                <option value="@Model.Categoria.CategoriaId">@Model.Categoria.Nome</option>
                @foreach (var c in ViewBag.Categorias)
                {
                    <option value="@c.CategoriaId">@c.Nome</option>
                }
            </select>
            <span class="field-validation-valid text-danger" data-valmsg-for="Categoria" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control", @placeholder = "Quantidade do produto" })
            @Html.ValidationMessageFor(model => model.Quantidade, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Preco, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Preço do produto" })
            @Html.ValidationMessageFor(model => model.Preco, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Salvar"
                   name="btnSalvar"
                   class="btn btn-primary" />
        </div>
    </div>
</fieldset>
}