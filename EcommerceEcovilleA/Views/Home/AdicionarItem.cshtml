@model IEnumerable<EcommerceEcovilleA.Models.ItemVenda>

@{
    ViewBag.Title = "AdicionarItem";
}

<h2>@ViewBag.Guid</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemVendaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ItemVendaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemVendaId })
        </td>
    </tr>
}

</table>
