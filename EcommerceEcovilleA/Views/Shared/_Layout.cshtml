@using EcommerceEcovilleA.DAL
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Home</a>
        <ul class="navbar-nav ml-auto">
            @if (ViewBag.Usuario != null)
    {
        <li class="nav-item">
            <a href="~/Home/CarrinhoCompras" class="btn btn-info">
                Carrinho
                <span class="badge badge-light">
                    @ItemVendaDAO.RetornarQuantidadeItensCarrinho(ViewBag.Usuario.UsuarioId.ToString())
                </span>
            </a>
        </li>
        <li class="nav-item">
            <a href="~/Usuario/Logout" class="btn btn-info">
                Logout
            </a>
        </li>
}
else
{
        <li class="nav-item">
            <a href="~/Usuario/Login" class="btn btn-info">
                Login
            </a>
        </li>
}
        </ul>
    </nav>

    <div class="container" style="margin-top:30px">
        @RenderBody()
    </div>

    <footer style="margin-top:30px;text-align:center">
        <hr />
        <p>
            &copy; Desenvolvido por Samuel Rodrigues e Daniel Hammerschmidt -
            @DateTime.Now.Year
        </p>
    </footer>
</body>
</html>
